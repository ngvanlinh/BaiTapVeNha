<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.model.Student" table="Student">
        <meta attribute="class-description">
            Lớp này chưa thông tin chi tiết về Student.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="native" />
        </id>
        <property name="HoTen" column="hoTen" type="string" />
        <property name="Lop" column="lop" type="string" />
        <property name="DiaChi" column="diaChi" type="string" />
        <property name="Diem" column="diem" type="int" />
    </class>
</hibernate-mapping>